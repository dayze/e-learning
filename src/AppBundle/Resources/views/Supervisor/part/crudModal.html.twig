{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div id="crudModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajout d'un utilisateur</h4>
            </div>
            <div class="modal-body">
                <form method="POST" class="ajaxForm" action="{{ form.vars.action }}">
                    <div class="form-group">
                        {{ form_errors(form) }}
                        {{ form_label(form.username, "Nom :") }}
                        {{ form_widget(form.username) }}
                        <div class="bg-danger">{{ form_errors(form.username) }}</div>
                    </div>
                    <div class="form-group">
                        {{ form_errors(form) }}
                        {{ form_label(form.email, "Email :") }}
                        {{ form_widget(form.email) }}
                        <div class="bg-danger">{{ form_errors(form.email) }}</div>
                    </div>
                    {% if form.plainPassword is defined %}
                    <div class="form-group">
                        {{ form_errors(form) }}
                        {{ form_label(form.plainPassword, "Mot de passe :") }}
                        {{ form_widget(form.plainPassword) }}
                        <div class="bg-danger">{{ form_errors(form.plainPassword) }}</div>
                    </div>
                    {% endif %}
                    <div class="form-group">
                        {{ form_errors(form) }}
                        {{ form_label(form.sections, "Section :") }}
                        {{ form_widget(form.sections) }}
                        <div class="bg-danger">{{ form_errors(form.sections) }}</div>
                    </div>
                    <div>
                    </div>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                    {{ form_label(form.save) }}
                    {{ form_widget(form.save) }}
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
</div>
