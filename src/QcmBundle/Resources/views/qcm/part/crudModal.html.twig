{% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div id="crudModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Ajout d'un Qcm</h4>
                </div>
                <div class="modal-body">
                    <form method="POST" class="ajaxForm" action="{{ form.vars.action }}">
                        <div class="form-group">
                            {{ form_errors(form) }}
                            {{ form_label(form.name, "Nom :") }}
                            {{ form_widget(form.name) }}
                            <div class="bg-danger">{{ form_errors(form.name) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_errors(form) }}
                            {{ form_label(form.qcmQuestions, "Questions :") }}
                            <ul class="qcmQuestions" data-prototype="{{ form_widget(form.qcmQuestions.vars.prototype)|e('html_attr') }}">

                            </ul>
                            {{ form_widget(form.qcmQuestions) }}
                            <div class="bg-danger">{{ form_errors(form.qcmQuestions) }}</div>
                        </div>

                        {#{{ form_label(form.save) }}
                        {{ form_widget(form.save) }}#}
                        {{ form_rest(form) }}
                        {#<button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>#}

                    </form>
                </div>
            </div>
        </div>
    </div>
<script>
    var $collectionHolder;

    // setup an "add a tag" link
    var $addQcmQuestionLink = $('<a href="#" class="add_qcmQuestion_link">Ajouter une question</a>');
    var $newLinkLi = $('<li></li>').append($addQcmQuestionLink);

    jQuery(document).ready(function() {
        // Get the ul that holds the collection of tags
        $collectionHolder = $('ul.qcmQuestions');

        // add the "add a tag" anchor and li to the tags ul
        $collectionHolder.append($newLinkLi);

        // count the current form inputs we have (e.g. 2), use that as the new
        // index when inserting a new item (e.g. 2)
        $collectionHolder.data('index', $collectionHolder.find(':input').length);

        $addQcmQuestionLink.on('click', function(e) {
            // prevent the link from creating a "#" on the URL
            e.preventDefault();

            // add a new tag form (see next code block)
            $addQcmQuestionLinkForm($collectionHolder, $newLinkLi);

        });

        function $addQcmQuestionLinkForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<li></li>').append(newForm);
            $newLinkLi.before($newFormLi);
        }

    });
</script>
