{% trans_default_domain 'FOSUserBundle' %}

<link rel="stylesheet" type="text/css" href="{{ asset('public/css/reset.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('public/css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('public/css/form.css') }}">
<div class="bg-img"></div>
<div class="content">
    <form action="{{ path("fos_user_security_check") }}" class="form-signin" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <h2 class="form-signin-heading">Se connecter</h2>
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" autofocus/>

        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" class="form-control" name="_password" required="required" />

        <div class="checkbox">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>

        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit"
               value="{{ 'security.login.submit'|trans }}" />
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>

</div>
